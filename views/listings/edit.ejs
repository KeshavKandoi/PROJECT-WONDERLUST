
<% layout("/layouts/boilerplate") %> 


<div class="row mt-3 ">
  <div class="col-8 offset-2">
  <h2> CREATE NEW LISTING</h2>
  <form method="POST" action="/listings/<%=listings._id%>?_method=PUT">

    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input name="title" value="<%=listings.title%>" type="text" class="form-control"/> 
    </div>
   
    <div>
      <label for="description" class="form-label">Description</label>
      <textarea name="description"  class="form-control" ><%=listings.description%></textarea>
    </div>
   

    <div>
      <label for="image" class="form-label">Image</label>
      <input name="image" value="<%=listings.image%>"  type="text" class="form-control"/>
    </div>
  
    <div class="row">

      <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input name="price" value="<%=listings.price%>"  type="number" class="form-control"/>
       </div>
     
       <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input name="country" value="<%=listings.country%>"  type="text" class="form-control"/>
       </div>

    </div>
   

    <div>
      <label for="location" class="form-label">Location</label>
      <input name="location" value="<%=listings.location%>"  type="text" class="form-control"/>
    </div>
    

    <br/>
    <button class="btn btn-dark edit-btn mt-3">EDIT</button>


  </form>
</div>
</div>

















