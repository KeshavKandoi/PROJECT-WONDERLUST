

<% layout("/layouts/boilerplate")%> 

<div class="row mt-3">
  <div class="col-8 offset-3 ">
  <h3> Listing Details</h3>
  </div>

  <div class="card col-6 offset-3  show-card  ">
    
      <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listingimage">
      <div class="card-body">
        <p class="card-text">
          <b><%=listing.title%></b><br>
          <%=listing.description%><br>
          &#8377;<%= listing.price != null ? listing.price.toLocaleString("en-IN") : "N/A" %>
          
        <%=listing.location%><br>
         <%=listing.country%><br>
        </p>
      </div>
  </div>

<br/>

<div class="btns">
<a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-2 offset-0  edit-btn">EDIT  </a>
 
  <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
    <button class="btn btn-dark offset-3 ">Delete </button>
    </form>
     


  </div>
</div>





